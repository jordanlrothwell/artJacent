{{!-- Profile button to be moved into header bar --}}
<div>
  <button class="btn btn-primary mb-3" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">Profile details</button>
</div>


<main class="profile-body">


  {{!-- Drawer with profile details --}}
  <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
    <div class="offcanvas-heade d-block p-3">
      <button type="button" class="btn-close text-reset " data-bs-dismiss="offcanvas" aria-label="Close"></button>
      <h4 class="mt-3" id="offcanvasRightLabel">{{name}}</h4>
    </div>
    <div class="offcanvas-body p-3">
      <p>{{email}}</p>
      <p>{{address}}</p>
    </div>
  </div>


  {{!-- Upload artwork --}}
  <div class="card">
    <h5 class="card-header">Upload image</h5>
    <div class="card-body">
      <p class="card-text">Upload new artwork for others to see</p>

      <form class="image-upload-form" enctype="multipart/form-data" id="form" method="POST" action="/api/user/upload">
        <input type="file" name="image" id="image">
        <input class="btn btn-primary mt-2"type="submit" id="submit">

      </form>
    </div>
  </div >

{{!-- Display photos --}}
  <div class="container">
    <div class="">
        <div class="card-group mt-4 row">
          {{#each artworks as |artwork|}}
            <div class="mb-5 card-container col-sm-12 col-md-6 col-xl-3">
              <img class="artwork-image card mh-100 w-100" src="{{image}}" alt="{{name}}">
              <div class="card-body">
                <h5 class="card-title">{{name}}</h5> 
              </div>
            </div>
          {{/each}}
        </div>
    </div>
  </div>
</main>
<script src="./js/profile.js"></script>
